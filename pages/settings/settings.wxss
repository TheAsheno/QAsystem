/* pages/settings/settings.wxss */
page {
  background-color: #f5f5f5;
}
.container {
  padding: 40rpx;
  display: flex;
  flex-direction: column;
  gap: 20px;
}
.user-card {
  display: flex;
  align-items: center;
  padding: 40rpx;
  background: white;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
  width: calc(100% - 40px);
}
.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-right: 30rpx;
}
.user-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}
.nickname {
  font-size: 34rpx;
  color: #333;
  margin-bottom: 10rpx;
}
.tip {
  font-size: 24rpx;
  color: #999;
}
.arrow {
  width: 40rpx;
  height: 40rpx;
  margin-left: 20rpx;
}
.settings-list {
  background: white;
  border-radius: 20rpx;
  padding: 0 40rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
  width: calc(100% - 40px);
}
.list-item {
  display: flex;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #eee;
}
.list-item:last-child {
  border-bottom: none;
}
.icon {
  width: 50rpx;
  height: 50rpx;
  margin-right: 30rpx;
}
.list-item text {
  flex: 1;
  font-size: 30rpx;
  color: #333;
}
.logout-btn {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  background: #fff;
  color: #ff4444;
  font-size: 32rpx;
  border-radius: 20rpx;
  margin-top: 40rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
}
.list-item:active,
.logout-btn:active {
  opacity: 0.8;
}