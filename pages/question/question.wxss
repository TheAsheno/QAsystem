/* pages/question/question.wxss */
page {
  background-color: #f5f5f5;
}
.container {
  padding: 30rpx 30rpx 200rpx;
}
.question-card {
  width: calc(100% - 40px);
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
  margin-bottom: 30rpx;
}
.user-info {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}
.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}
.meta {
  display: flex;
  flex-direction: column;
}
.username {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}
.time {
  font-size: 24rpx;
  color: #999;
}
.title {
  font-size: 34rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 20rpx;
}
.detail {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 30rpx;
}
.tags {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}
.tag {
  background: #f0f0f0;
  color: #666;
  font-size: 24rpx;
  padding: 8rpx 16rpx;
}
.image {
  margin-top: 10px;
  width: 100%;
}
.answer-list {
  width: calc(100% - 40px);
  background: white;
  border-radius: 16rpx;
  padding: 30rpx 30rpx 0 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
}
.list-top {
  font-size: 26rpx;
  color: #999;
  margin-bottom: 20rpx;
  display: flex;
  justify-content: space-between;
}
.only-btn {
  padding: 10rpx 20rpx 10rpx 20rpx;
  border-radius: 20rpx;
  background: #f0f0f0;
  transition: all 0.3s;
  font-size: 20rpx;
  color: #999;
}
.only-btn.selected {
  background: #4CAF50;
  color: white;
}
.answer-card {
  border-top: 1rpx solid #eee;
  padding: 30rpx 0;
}
.content {
  word-wrap: break-word;
  word-break: break-all;
  white-space: pre-wrap;
}
.actions {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  margin-top: 10px;
}
.like-btn {
  padding: 5rpx 20rpx 10rpx 20rpx;
  border-radius: 40rpx;
  background: #f0f0f0;
  transition: all 0.3s;
  font-size: 26rpx;
  color: #999;
}
.like-btn.liked {
  background: #4CAF50;
  color: white;
}
.reply-box {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  padding: 20rpx 30rpx;
  box-shadow: 0 -4rpx 12rpx rgba(0,0,0,0.05);
}
.reply-input {
  margin-bottom: 8px;
  width: 94%;
  padding: 10px;
  border-radius: 20px;
  background-color: #f1f1f1;
}
.interact {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.btn-container {
  display: flex;
  gap: 15px;
}
.reply-btn {
  width: 20px;
  height: 20px;
}
.image-wrapper {
  display: flex;
  flex-wrap: wrap;
  gap: 15px;
}
.image-item {
  position: relative;
}
.image-thumbnail {
  width: 35px;
  height: 15px;
  padding: 10rpx 20rpx;
  border-radius: 30rpx;
  background: #f0f0f0;
  font-size: 24rpx;
  color: #999;
}
.delete-icon {
  position: absolute;
  top: -5px;
  right: -5px;
  width: 15px;
  height: 15px;
  cursor: pointer;
}


