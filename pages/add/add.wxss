/* pages/add/add.wxss */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
  box-sizing: border-box;
}
.form-container {
  height: calc(100vh - 200rpx);
}
.form-item {
  background: white;
  padding: 30rpx;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
}
.label {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
}
.input-title {
  font-size: 32rpx;
  color: #333;
  padding: 20rpx;
  background: #f8f8f8;
  border-radius: 8rpx;
}
.input-content {
  font-size: 28rpx;
  color: #333;
  min-height: 200rpx;
  padding: 20rpx;
  background: #f8f8f8;
  border-radius: 8rpx;
}
.tags-container {
  white-space: nowrap;
  padding: 10rpx 0;
}
.tag {
  display: inline-block;
  padding: 12rpx 24rpx;
  margin-right: 20rpx;
  border-radius: 40rpx;
  background: #f0f0f0;
  color: #666;
  font-size: 26rpx;
}
.tag.selected {
  background: #4CAF50;
  color: white;
}
.images-container {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}
.image-item {
  width: 200rpx;
  height: 200rpx;
  position: relative;
  border-radius: 8rpx;
  overflow: hidden;
}
.preview-image {
  width: 100%;
  height: 100%;
}
.delete-btn {
  position: absolute;
  right: 0;
  top: 0;
  width: 40rpx;
  height: 40rpx;
  background: rgba(0,0,0,0.5);
  color: white;
  text-align: center;
  line-height: 40rpx;
  border-radius: 0 0 0 8rpx;
}
.upload-btn {
  width: 200rpx;
  height: 200rpx;
  border: 2rpx dashed #ccc;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 8rpx;
}
.plus {
  font-size: 48rpx;
  color: #999;
}
.submit-btn {
  position: fixed;
  bottom: 40rpx;
  left: 5%;
  right: 5%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background: #4CAF50;
  color: white;
  border-radius: 40rpx;
  font-size: 32rpx;
  box-shadow: 0 4rpx 12rpx rgba(76,175,80,0.3);
}