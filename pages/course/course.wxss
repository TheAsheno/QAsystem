/* pages/course/course.wxss */
.v1 {
  display: flex;
  flex-direction: column;
  padding: 20px;
}
.filters-container {
  align-self: center;
  width: 90%;
  display: flex;
  justify-content: space-around;
  margin-bottom: 15px;
}
.picker-item {
  padding: 5px 15px;
  border-radius: 5px;
  text-align: center;
}
.picker-item text {
  font-size: 14px;
  color: #888888;
}
.search-bar {
  align-self: center;
  width: 82%;
  padding: 8px 15px;
  border-radius: 20px;
  background-color: #f1f1f1;
  font-size: 14px;
}
.course-box {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
  gap: 16px;
  padding: 20px;
}
.course-item {
  background-color: #ffffff;
  border-radius: 12px;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  padding: 14px 16px;
  transition: transform 0.2s ease, box-shadow 0.2s ease;
}
.course-item:hover {
  transform: translateY(-4px);
  box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
}
.course-name {
  font-size: 18px;
  font-weight: bold;
  color: #333333;
  margin-bottom: 8px;
}
.course-teacher {
  font-size: 14px;
  color: #666666;
  margin-bottom: 8px;
}
.course-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.course-type {
  font-size: 12px;
  color: #ffffff;
  background-color: #4CAF50;
  padding: 4px 8px 6px 8px;
  border-radius: 4px;
}
.course-belong {
  font-size: 14px;
  color: #888888;
}
