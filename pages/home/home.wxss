/* pages/home/home.wxss */
.v1 {
  display: block;
  position:absolute;
  width: 100%;
  background-color: white;
}
.search-outer {
  padding: 20rpx 20rpx 0 20rpx;
}
.search-inner {
  text-align: center;
  width: 720rpx;
  height: 58rpx;
  background: whitesmoke;
  border-radius: 10rpx;
  line-height: 48rpx;
  box-sizing: border-box;
}
.search-inner > image {
  height: 30rpx;
  width: 30rpx;
  vertical-align: middle;
}
.search-inner > text {
  font-size: 25rpx;
  color: #B1B1B1;
}
.nav-box {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin: 20rpx 0;
  background-color: #F5F5F5;
  padding: 20rpx 0;
}
.nav {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}
.nav image {
  width: 40%;
  background-color: white;
  border-radius: 20rpx;
  padding: 15rpx;
}
.nav text {
  margin-top: 15rpx;
  font-size: 25rpx;
  font-weight: bolder;
  font-family: PingFang SC;
}
.question-box {
  padding: 25rpx 20px;
  background-color: #F5F5F5;
}
.header {
  display: flex;
  margin-bottom: 10px;
  justify-content: space-between;
}
.list-title {
  font-size: 30rpx;
  font-weight: bold;
}
.notice{
  margin-right: 10rpx;
  padding: 2rpx 5rpx;
  color: #f29100;
  font-size: 12px;
}
.question-item {
  display: flex;
  flex-direction: column;
  gap: 5px;
  margin-bottom: 20px;
  background-color: #ffffff;
  border-radius: 12px;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  padding: 16px;
  margin-bottom: 16px;
  transition: transform 0.2s ease, box-shadow 0.2s ease;
}
.question-item:hover {
  transform: translateY(-4px);
  box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
}
.question-course {
  font-size: 12px;
  color: #999;
  margin-top: 5rpx;
  word-break: normal;
}
.question-title {
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
  font-weight: bold;
}
.question-content {
  font-size: 12px;
  word-break: break-all;
  color: #999;
  display: -webkit-box; 
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis; 
}
.car-dot {
  font-size: 20rpx;
  margin-right: 10rpx;
  padding: 2rpx 5rpx;
}
.question-info {
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 10px;
}
.question-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 5px;
  margin-left: 10px;
}
.tag-item {
  background-color: #f1f1f1;
  padding: 5px 10px;
  font-size: 10px;
  color: #888888;
}
